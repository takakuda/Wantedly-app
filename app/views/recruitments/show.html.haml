.header
  .header__logo
    %a{:href => "/"}
      %img.icon{:alt => "Wantedly", :height => "44px", :src => "https://de7iszmjjjuya.cloudfront.net/assets/wantedly-logo-5906d9a368d0bcdd2919553127357d4d.svg", :width => "44px", :margin => "0"}/
  .header__menu
    %ul
      %li
        %a{:href => "/"} 募集を見る
      %li
        %a{:href => "/"} フィード
      %li
        %a{:href => "/"} プロフィール
      %li
        %a{:href => "/"} ツール
      %li
        %form.search{"accept-charset" => "UTF-8", :action => "/search", :method => "get"}
          %span{:style => "position: relative; display: inline-block; direction: ltr;"}
            %input.input{:autocomplete => "off", :dir => "auto", :name => "q", :placeholder => "人や会社、募集を検索", :spellcheck => "false", :style => "position: relative; vertical-align: top;", :type => "text"}/
          %i.wt-icon.wt-icon-search-short
  = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
  .header__profile
    %img.photo{:height => "40", :src => "/assets/icon.photo.jpg", :style => "display: block", :width => "40"}
.detail-contents
  .detail-contents__main
    .detail-contents__main__header
      .detail-contents__main__header__title
        %h1.title
          = @recruitment.title
